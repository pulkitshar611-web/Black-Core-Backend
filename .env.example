# Copy this file to .env and fill in your values

# Server
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL="file:./blackcore.db"

# JWT Auth
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=8h

# 2FA (speakeasy)
TWO_FA_APP_NAME=BlackCore

# --- MARKETPLACE APIs ---
# Xometry (fill when client provides)
XOMETRY_API_KEY=
XOMETRY_API_URL=https://api.xometry.com/v1

# Treatstock (fill when client provides)
TREATSTOCK_API_KEY=
TREATSTOCK_API_URL=https://api.treatstock.com

# Marketplace polling interval (seconds)
MARKETPLACE_POLL_INTERVAL=60

# --- ALERTS ---
# Telegram Bot (Free - get from @BotFather)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio (WhatsApp + SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# --- HARDWARE ---
# Zebra ZT411 Label Printer (local network)
ZEBRA_PRINTER_IP=192.168.1.100
ZEBRA_PRINTER_PORT=9100

# Modbus Power Monitor (local network)
MODBUS_HOST=192.168.1.200
MODBUS_PORT=502
MODBUS_UNIT_ID=1
